<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activities.CreateAnswerActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sl_color_trans_2_background2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/label_cancel___cm"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_activity_create_answer___qa"
            android:textColor="@color/colorBarTitle"
            android:textSize="@dimen/bar_title_size" />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/sl_r4_primary_2_dark_2"
            android:gravity="center"
            android:text="@string/btn_post___qa"
            android:textColor="@color/white_disable_gray3"
            android:textSize="@dimen/medium_text_size1" />

        <View
            style="@style/line_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <include
        android:id="@+id/web_view_edit"
        layout="@layout/editor_web_view___qa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <View style="@style/line_horizontal" />

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_pic_gray" />

        <com.hunliji.hljquestionanswer.widgets.UploadingTextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/medium_text_size3"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/icon_arrow_down_gray_36_18" />

    </RelativeLayout>
</LinearLayout>

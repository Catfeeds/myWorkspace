<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.QAAnswerEditActivity">

    <RelativeLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sl_color_trans_2_background2"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/label_cancel___cm"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_activity_create_answer___qa"
            android:textColor="@color/colorBarTitle"
            android:textSize="@dimen/bar_title_size" />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/sl_r4_primary_2_dark_2"
            android:gravity="center"
            android:text="@string/btn_post___qa"
            android:textColor="@color/white_disable_gray3"
            android:textSize="@dimen/medium_text_size1" />

        <View
            style="@style/line_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_layout"
        android:background="@color/colorWhite"
        android:gravity="top"
        android:padding="16dp"
        android:text="jfjfj"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

</RelativeLayout>

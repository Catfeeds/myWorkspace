<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_r6_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="128dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/large_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_alert_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:text="确定要取消吗？"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size2" />

    </LinearLayout>

    <include layout="@layout/line_layout___cm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sl_r6_bl_white_2_background2"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/label_cancel___cm"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1" />

        <View
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorLine" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sl_r6_br_white_2_background2"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/label_confirm___cm"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1" />

    </LinearLayout>

</LinearLayout>

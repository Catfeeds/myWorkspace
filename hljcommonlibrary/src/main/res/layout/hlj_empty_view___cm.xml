<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/empty_hint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/img_empty_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_empty_common"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_net_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_no_network"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_empty_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/label_empty___cm"
        android:textColor="@color/colorGray2"
        android:textSize="@dimen/ex_medium_text_size"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_empty_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/label_click_to_reload___cm"
        android:textColor="@color/colorGray3"
        android:textSize="@dimen/medium_text_size2"
        android:visibility="gone" />
</LinearLayout>

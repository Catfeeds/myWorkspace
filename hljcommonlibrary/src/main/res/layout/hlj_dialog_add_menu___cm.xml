<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_white"
    android:orientation="vertical">

    <Button
        android:id="@+id/action_gallery"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_color_white_2_background2"
        android:text="@string/label_album___cm"
        android:textColor="@color/colorBlack3"
        android:textSize="@dimen/ex_medium_text_size" />

    <View style="@style/line_horizontal"/>

    <Button
        android:id="@+id/action_camera_photo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_color_white_2_background2"
        android:text="@string/label_camera_photo___cm"
        android:textColor="@color/colorBlack3"
        android:textSize="@dimen/ex_medium_text_size" />

    <View style="@style/line_horizontal"/>

    <Button
        android:id="@+id/action_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_color_white_2_background2"
        android:text="@string/label_cancel___cm"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/ex_medium_text_size" />

</LinearLayout>
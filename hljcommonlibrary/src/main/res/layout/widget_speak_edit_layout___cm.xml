<?xml version="1.0" encoding="utf-8"?>
<com.hunliji.hljcommonlibrary.views.widgets.SpeakEditLayout android:id="@+id/speak_edit_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:minHeight="44dp">
        <ImageButton
            android:id="@+id/btn_image"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_pic_gray" />
        <ImageButton
            android:id="@+id/btn_voice"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_audio_gray" />


        <Button
            android:id="@+id/btn_speak"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:background="@drawable/sl_r15_stroke_primary_2_primary"
            android:gravity="center"
            android:text="@string/action_speak_start___cm"
            android:textColor="@color/primary_white"
            android:textSize="@dimen/medium_text_size1"
            android:textStyle="bold"
            android:visibility="gone" />


        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/sp_round15_white_stroke_gray3"
            android:gravity="center_vertical"
            android:inputType="none"
            android:maxLines="4"
            android:minHeight="30dp"
            android:minLines="1"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

        <ImageButton
            android:id="@+id/btn_face"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_face_gray" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@null"
            android:gravity="center"
            android:minWidth="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="@string/btn_send___cm"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size1" />
    </LinearLayout>

    <View
        style="@style/line_horizontal"
        android:layout_below="@+id/edit_layout" />

    <FrameLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_layout"
        android:visibility="gone" />

</com.hunliji.hljcommonlibrary.views.widgets.SpeakEditLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_r12_white">

    <LinearLayout
        android:id="@+id/collect_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="32dp">

        <ImageView
            android:id="@+id/img_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_new_praise___cm" />

        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/ex_medium_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/collect_msg_confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/collect_msg_layout"
        android:orientation="vertical">

        <include layout="@layout/line_layout___cm" />

        <TextView
            android:id="@+id/btn_notice_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/label_confirm_praise___cm"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ex_medium_text_size" />
    </LinearLayout>


</RelativeLayout>
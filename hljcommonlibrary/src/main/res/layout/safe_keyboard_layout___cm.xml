<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/line_layout___cm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@mipmap/icon_lock_green"
            android:drawablePadding="8dp"
            android:text="@string/label_safe_keyboard___cm"
            android:textColor="@color/green4"
            android:textSize="@dimen/medium_text_size1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLine2"
        android:minHeight="200dp"
        android:orientation="vertical">

        <include layout="@layout/line_layout___cm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/k_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/k_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/k_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/k_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/k_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/k_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/k_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/k_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/k_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/k_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorLine"
                android:gravity="center"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/k_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white10"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorBlack2"
                android:textSize="27sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/k_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorLine"
                android:gravity="center"
                android:scaleType="center"
                android:src="@mipmap/icon_keyboard_delete_black" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hunliji.hljvideolibrary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- 视频预览 -->
        <activity
            android:name=".activities.VideoPreviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBarTheme" />
        <activity
            android:name=".activities.BaseVideoTrimActivity"
            android:theme="@style/NoTitleBarTheme" />
        <!-- 视频摄录 -->
        <activity
            android:name=".activities.TakingVideoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme" />
        <!-- 视频编辑 -->
        <activity
            android:name=".activities.VideoTrimActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBarTheme" />
        <activity
            android:name=".activities.VideoChooserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTitleTheme" />

        <activity
            android:name=".activities.VideoChooserPreviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTitleTheme" />

        <activity
            android:name=".activities.ChosenVideoTrimActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTitleTheme" />

    </application>

</manifest>
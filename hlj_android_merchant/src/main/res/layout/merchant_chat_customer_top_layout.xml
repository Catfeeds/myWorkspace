<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/wx_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_toLeftOf="@+id/middle_line"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信: "
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/tv_wx_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_edit_primary_36_36"
            android:gravity="center_vertical"
            android:text="未获取"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_toRightOf="@+id/middle_line"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话: "
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/tv_phone_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_edit_primary_36_36"
            android:gravity="center_vertical"
            android:text="未获取"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            android:textSize="@dimen/medium_text_size1" />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />

    </LinearLayout>

    <View
        android:id="@+id/middle_line"
        style="@style/line_vertical"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true" />

    <View
        style="@style/line_horizontal"
        android:layout_marginTop="44dp" />

</RelativeLayout>
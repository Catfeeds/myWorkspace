<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioMenu"/>

    <RadioGroup
        android:id="@+id/radioMenu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/action_layout"
        android:layout_gravity="center_vertical"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_withdrawing"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sl_trans_2_tab_checked"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/label_withdrawing"
                android:textColor="@color/black3_primary"
                android:textSize="@dimen/medium_text_size2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_withdraw_success"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sl_trans_2_tab_checked"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/label_withdraw_success"
                android:textColor="@color/black3_primary"
                android:textSize="@dimen/medium_text_size2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_withdraw_fail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sl_trans_2_tab_checked"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/label_withdraw_fail"
                android:textColor="@color/black3_primary"
                android:textSize="@dimen/medium_text_size2" />
        </LinearLayout>

    </RadioGroup>

    <include layout="@layout/progressbar_layout" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/switch_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_switch_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:includeFontPadding="false"
            android:text="@string/label_close_today_schedule"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

        <com.hunliji.marrybiz.widget.ShSwitchView
            android:id="@+id/switch_view"
            android:layout_width="54dp"
            android:layout_height="32dp"
            android:clickable="true"
            app:clickCheckable="false"
            app:shadowSpace="0dp"
            app:tintColor="@color/color_green" />

    </LinearLayout>

    <View style="@style/line_horizontal" />

</LinearLayout>
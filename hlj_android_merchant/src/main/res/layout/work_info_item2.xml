<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/services_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="1dp"
        android:paddingTop="14dp"
        android:text="@string/hint_service_items_title"
        android:textColor="@color/colorBlack2"
        android:textSize="@dimen/medium_text_size1"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/service_items_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/services_item_title"
        android:background="@color/colorWhite"
        android:padding="12dp"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/sl_ic_service_item1"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/propertie3"
            android:textColor="@color/gray1_primary"
            android:textSize="@dimen/medium_text_size3" />


        <CheckBox
            android:id="@+id/item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/sl_ic_service_item2"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/propertie4"
            android:textColor="@color/gray1_primary"
            android:textSize="@dimen/medium_text_size3" />


        <CheckBox
            android:id="@+id/item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/sl_ic_service_item3"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/propertie6"
            android:textColor="@color/gray1_primary"
            android:textSize="@dimen/medium_text_size3" />

        <CheckBox
            android:id="@+id/item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/sl_ic_service_item4"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/propertie5"
            android:textColor="@color/gray1_primary"
            android:textSize="@dimen/medium_text_size3" />
    </LinearLayout>

    <include
        android:id="@+id/merchant_info_layout"
        layout="@layout/work_info_merchant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_items_layout"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/merchant_info_layout">

        <RelativeLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:text="@string/label_user_comment"
                android:textColor="@color/colorBlack2" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/icon_arrow_right_gray_14_26"
                android:text="@string/label_comment_count2"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorLine" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/describe_title_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="@string/label_work_info"
                android:textColor="@color/colorBlack2" />

            <ImageView
                android:id="@+id/arrow_work_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/icon_arrow_up_gray_26_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorLine" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_work_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:minHeight="44dp"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />
    </LinearLayout>
</RelativeLayout>
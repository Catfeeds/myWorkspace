<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLine"
        android:orientation="vertical"
        android:padding="0.5dp">

        <ImageView
            android:id="@+id/img_work_cover"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorBackground"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_work_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_work_cover"
            android:background="@color/colorWhite"
            android:padding="6dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_work_title"
            android:background="@color/colorWhite"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <TextView
                android:id="@+id/tv_work_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_work_collect"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/tv_work_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/label_collect_count"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
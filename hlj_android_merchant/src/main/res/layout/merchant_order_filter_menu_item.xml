<?xml version="1.0" encoding="utf-8"?>
<com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearLayout android:id="@+id/cb_filter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:duplicateParentState="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="start"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/black3_primary"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/sl_ic_arrow_gray_down_2_red_up"
            android:textSize="@dimen/medium_text_size2" />

    </LinearLayout>

    <View
        style="@style/line_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

</com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearLayout>

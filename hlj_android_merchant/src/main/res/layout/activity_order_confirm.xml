<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OrderConfirmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onDateSelect"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack2"
            android:text="@string/label_serve_date"
            android:textSize="@dimen/medium_text_size1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_serve_date"
            android:layout_width="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="@dimen/medium_text_size1"
            android:textColor="@color/colorBlack2"
            android:gravity="right"
            android:hint="@string/hint_serve_date"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right_gray_14_26" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:text="@string/label_confirm_service2"
        android:textSize="@dimen/medium_text_size1"
        android:onClick="onConfirm"
        android:enabled="false"
        android:background="@drawable/sl_color_primary_2_dark"
        android:layout_height="50dp" />
    <include layout="@layout/progressbar_layout"/>
</RelativeLayout>
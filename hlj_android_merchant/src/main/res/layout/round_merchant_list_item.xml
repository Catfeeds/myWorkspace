<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_color_white_2_background2">

    <RelativeLayout
        android:id="@+id/level_layout"
        android:layout_width="60dp"
        android:layout_height="78dp">

        <ImageView
            android:id="@+id/level_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_level1" />

        <TextView
            android:id="@+id/level_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/ex_medium_text_size"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/level_layout"
        android:background="@drawable/image_bg_my_shop"
        android:gravity="center_vertical">

        <com.makeramen.rounded.RoundedImageView
            android:id="@+id/logo"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:border_color="@color/colorLine"
            app:border_width="0.5dp"
            app:corner_radius="27dp"
            app:round_background="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="12dp"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="6dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/icons_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingRight="6dp"
                                android:paddingTop="6dp">

                                <ImageView
                                    android:id="@+id/level_icon"
                                    android:layout_width="66dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_merchant_level2"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/bond_icon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/icon_bond_36_36"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/refund_icon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_refund_tag"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/promise_icon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_promise_tag"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/free_icon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_free"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/gift_icon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_gift"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/exclusive_offer_icon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_exclusive_offer"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/promote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/sp_promote_bg"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="@string/label_promote"
                                    android:textColor="@color/colorGray2"
                                    android:textSize="@dimen/small_text_size"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/price_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rmb"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/medium_text_size3" />

                                <TextView
                                    android:id="@+id/tv_hotel_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/medium_text_size1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_hotel_desk2"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/medium_text_size3" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/icon_my_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_my_shop_tag"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/tv_label1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_work_count"
                    android:textColor="@color/colorBlack3"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/tv_label2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_case_count"
                    android:textColor="@color/colorBlack3"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_label3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/merchant_twitter_count"
                    android:textColor="@color/colorBlack3"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/tv_label4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/merchant_collect_count"
                    android:textColor="@color/colorBlack3"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_layout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/shop_gift_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/sp_r2_stroke_primary"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/label_shop_gift"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="@string/label_reserve_get"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />


            <TextView
                android:id="@+id/shop_gift_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cost_effective_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/sp_r2_stroke_primary"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/label_cost_effective"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/cost_effective_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />
        </LinearLayout>

        <View
            android:id="@+id/merchant_list_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorLine" />
    </LinearLayout>
</RelativeLayout>
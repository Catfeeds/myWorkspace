<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:text="@string/label_select_complain_reason"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1"
                android:textStyle="bold" />

            <com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearGroup
                android:id="@+id/cb_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton
                    android:id="@+id/cb_1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    app:isChecked="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:text="恶意诋毁"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_width="17dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="20dp"
                            android:duplicateParentState="true"
                            android:src="@drawable/sl_ic_trans_2_tick_red" />
                    </LinearLayout>

                </com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/colorLine" />

                <com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton
                    android:id="@+id/cb_2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:text="广告"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_width="17dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="20dp"
                            android:duplicateParentState="true"
                            android:src="@drawable/sl_ic_trans_2_tick_red" />
                    </LinearLayout>

                </com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorLine" />

                <com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton
                    android:id="@+id/cb_3"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:text="色情"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_width="17dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="20dp"
                            android:duplicateParentState="true"
                            android:src="@drawable/sl_ic_trans_2_tick_red" />
                    </LinearLayout>

                </com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorLine" />

                <com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton
                    android:id="@+id/cb_4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:text="脏话"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_width="17dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="20dp"
                            android:duplicateParentState="true"
                            android:src="@drawable/sl_ic_trans_2_tick_red" />
                    </LinearLayout>

                </com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorLine" />

                <com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton
                    android:id="@+id/cb_5"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:duplicateParentState="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:text="其他"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_width="17dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="20dp"
                            android:duplicateParentState="true"
                            android:src="@drawable/sl_ic_trans_2_tick_red" />
                    </LinearLayout>

                </com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearButton>

            </com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorWhite"
                    android:gravity="top"
                    android:hint="@string/label_write_comment_reason"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="3dp"
                    android:maxLength="200"
                    android:minHeight="90dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:textColor="@color/colorBlack2"
                    android:textColorHint="@color/colorGray2"
                    android:textSize="@dimen/medium_text_size1" />


                <TextView
                    android:id="@+id/tv_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_content"
                    android:paddingBottom="12dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:textSize="@dimen/medium_text_size3"
                    android:text="0/200"
                    android:textColor="@color/colorGray" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:clipToPadding="false"
                android:isScrollContainer="false"
                android:overScrollMode="never"
                android:padding="11dp"
                android:scrollbars="none" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/sl_r3_primary_2_dark"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/btn_submit"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/ex_medium_text_size" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/hlj_progressbar___cm" />

</RelativeLayout>
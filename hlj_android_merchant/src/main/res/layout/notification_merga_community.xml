<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="16dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <View style="@style/line_horizontal" />

    <RelativeLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <com.makeramen.rounded.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_avatar_primary"
            app:corner_radius="20dp"
            app:round_background="true" />
        <View
            android:id="@+id/iv_new"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:visibility="gone"
            android:background="@drawable/sp_r8_accent"/>

        <FrameLayout
            android:id="@+id/names_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_toRightOf="@+id/iv_avatar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />
                <TextView
                    android:id="@+id/tv_merge_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/label_merge_count"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorGray3"
            android:textSize="@dimen/medium_text_size3" />


        <TextView
            android:id="@+id/tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/names_layout"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_info_layout"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorBlack3"
        android:textSize="@dimen/medium_text_size2"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/extra_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="14dp"
        android:background="@color/colorBackground2"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_extra_cover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_extra_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:textColor="@color/colorGray"
            android:textSize="13sp" />

    </LinearLayout>
</RelativeLayout>
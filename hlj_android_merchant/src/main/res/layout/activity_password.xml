<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:text="@string/label_setting_password"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size3" />

            <com.hunliji.marrybiz.widget.ClearableEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/sl_r20_stroke_line_white_2_stroke_red_white"
                android:gravity="center_vertical"
                android:hint="@string/hint_user_password"
                android:inputType="textWebPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:maxLength="32"
                android:singleLine="true"
                android:textColor="@color/colorBlack2"
                android:textColorHint="@color/colorGray3"
                android:textSize="@dimen/medium_text_size2" />


            <Button
                android:id="@+id/ok_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/sl_r20_primary_2_dark"
                android:onClick="onOk"
                android:text="@string/complete"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/medium_text_size1" />


        </LinearLayout>
    </ScrollView>

    <include layout="@layout/progressbar_layout" />

</RelativeLayout>
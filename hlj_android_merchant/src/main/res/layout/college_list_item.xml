<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="107dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/img_cover"
            android:layout_alignTop="@+id/img_cover"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/img_cover"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_stick"
                    android:layout_width="26dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/sp_r2_primary"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="置顶"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorBlack2"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="2"
                android:textColor="@color/colorBlack3"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/section_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackground"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_divider"
        style="@style/line_horizontal"
        android:layout_marginLeft="16dp" />
</LinearLayout>
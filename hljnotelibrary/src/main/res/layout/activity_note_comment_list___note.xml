<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <include layout="@layout/hlj_common_fragment_ptr_recycler_view___cm" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground2"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:minHeight="44dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/btn_add_emoji"
                android:background="@drawable/sp_round15_white_stroke_gray3"
                android:gravity="center_vertical"
                android:hint="@string/hint_post_comment___note"
                android:includeFontPadding="false"
                android:inputType="none"
                android:maxLength="140"
                android:maxLines="5"
                android:minHeight="30dp"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:textColor="@color/colorBlack2"
                android:textColorHint="@color/colorGray3"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btn_add_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_face_black_50_50" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
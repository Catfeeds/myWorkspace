<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.rounded.RoundedImageView
        android:id="@+id/img_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        app:corner_radius="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/img_logo"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/ex_medium_text_size" />

        <com.hunliji.hljcommonlibrary.views.widgets.SingleLineLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bond_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_bond_36_36"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/refund_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_refund_tag_36_36"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/promise_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_promise_tag_36_36"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/free_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_free_tag_36_36"
                android:visibility="gone" />
        </com.hunliji.hljcommonlibrary.views.widgets.SingleLineLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/work_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_work_count___cm"
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/medium_text_size3" />

            <TextView
                android:id="@+id/case_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/label_case_count___cm"
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/medium_text_size3"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_gift_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:background="@drawable/sp_r2_stroke_primary"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/label_shop_gift___cv"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="预约即可领取"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size3" />


        <TextView
            android:id="@+id/shop_gift_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cost_effective_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_gift_layout"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:background="@drawable/sp_r2_stroke_primary"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="超划算"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/cost_effective_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size3" />
    </LinearLayout>

</merge>
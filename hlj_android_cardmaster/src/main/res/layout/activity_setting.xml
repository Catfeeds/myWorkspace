<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <LinearLayout
            android:id="@+id/layout_account_security"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="账户安全"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <include layout="@layout/line_layout___cm" />

        <LinearLayout
            android:id="@+id/layout_information"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="个人信息"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <include layout="@layout/line_layout___cm" />

        <LinearLayout
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="第三方账号绑定"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <include layout="@layout/line_layout___cm" />

        <LinearLayout
            android:id="@+id/layout_suggest"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="意见反馈"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="给请帖大师好评"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <include layout="@layout/line_layout___cm" />

        <LinearLayout
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="关于我们"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <View
                android:id="@+id/new_versions_view"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sp_oval_accent"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <include layout="@layout/line_layout___cm" />

        <LinearLayout
            android:id="@+id/layout_cache_clear"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="清除缓存"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/cache_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1" />


    </LinearLayout>

</ScrollView>
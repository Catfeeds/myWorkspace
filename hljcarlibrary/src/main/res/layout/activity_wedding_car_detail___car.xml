<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite">

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/ActionImageItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_back_car_gold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lines="1"
            android:text="婚车详情"
            android:textColor="@color/colorBarTitle"
            android:textSize="@dimen/bar_title_size"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_share2"
            style="@style/ActionImageItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_share_car_gold_44_44" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_share2">

            <ImageView
                android:id="@+id/btn_msg2"
                style="@style/ActionImageItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_message_mail_car_gold_46_46" />

            <View
                android:id="@+id/msg_notice"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/sp_oval_accent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msg_count"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/sp_r8_car_gold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/small_text_size"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <View style="@style/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp">

                <LinearLayout
                    android:id="@+id/layout_call"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical"
                    android:paddingBottom="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_wedding_car_call___car" />

                    <TextView
                        android:id="@+id/contact_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="电话"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/small_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_sms"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical"
                    android:paddingBottom="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_wedding_car_sms___car" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="私信"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/small_text_size" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="43dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/layout_car_team"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|bottom"
                        android:orientation="vertical"
                        android:paddingBottom="3dp">

                        <ImageView
                            android:id="@+id/img_car_team"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_wedding_car___car" />

                        <TextView
                            android:id="@+id/tv_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="车队"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/small_text_size" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_car_count"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/sp_r8_car_gold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minWidth="16dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_join_team"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#d4933f"
            android:text="加入车队"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ex_medium_text_size" />

        <Button
            android:id="@+id/btn_find_schedule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:text="查询档期"
            android:textColor="#d4933f"
            android:textSize="@dimen/ex_medium_text_size" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/action_layout">

        <include layout="@layout/hlj_common_fragment_ptr_recycler_view___cm" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chat_bubble_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_layout"
        android:layout_marginBottom="7dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/chat_click_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/arrow"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="?attr/hljBgChatBubble"
            android:padding="14dp">

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/img_logo"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_avatar_primary"
                app:border_color="@color/colorWhite"
                app:border_width="1dp"
                app:corner_radius="19dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_logo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bubble_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="?attr/hljColorBottomButton"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="?attr/hljIconChatBubbleArrowRight"
                    android:gravity="center"
                    android:text="来自私信"
                    android:textColor="?attr/hljColorBottomButton"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:scaleType="centerInside"
            android:src="?attr/hljIconChatBubbleArrowDown" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/layout_sku"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.makeramen.rounded.RoundedImageView
        android:id="@+id/img_anim_start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:scaleType="centerCrop"
        app:corner_radius="25dp" />

</RelativeLayout>
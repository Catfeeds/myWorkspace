<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:id="@+id/cover_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorImageBackground"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_badge"
                android:layout_width="60dp"
                android:layout_marginLeft="8dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size2" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/label_rmb___cm"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/tv_show_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_text_size2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="6dp"
                android:includeFontPadding="false"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/ex_small_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <TextView
                android:id="@+id/tv_area_tag"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="4dp"
                android:minWidth="36dp"
                android:lines="1"
                android:layout_marginTop="8dp"
                android:background="@drawable/sp_r2_stroke_primary"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_free_trial"
                android:layout_width="36dp"
                android:layout_height="15dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sp_r2_primary"
                android:gravity="center"
                android:text="@string/label_free_trial___cv"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shop_gift"
                android:layout_width="36dp"
                android:layout_height="15dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sp_r2_primary"
                android:gravity="center"
                android:text="@string/label_shop_gift___cv"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
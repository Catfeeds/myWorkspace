<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/hljColorSegmentBackground"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/answer_header_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/sl_clickable_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_answer_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="?attr/hljColorSegmentTitle"
            android:textSize="@dimen/medium_text_size1"
            android:textStyle="bold" />

        <View
            style="@style/line_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:background="?attr/hljColorLine" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/answer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_clickable_background"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="17dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/hljColorSegmentTitle"
            android:textSize="@dimen/ex_medium_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="8dp"
            android:maxLines="2"
            android:textColor="?attr/hljColorContent2"
            android:textSize="@dimen/medium_text_size2" />

    </LinearLayout>

    <View
        android:id="@+id/bottom_thin_line_layout"
        style="@style/line_horizontal"
        android:layout_marginLeft="16dp"
        android:background="?attr/hljColorLine"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_thick_line_layout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackground"
        android:visibility="gone" />

</LinearLayout>

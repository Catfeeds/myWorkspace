<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/cpm_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:minHeight="0dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/merchant_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/img_merchant_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                app:border_color="@color/colorLine"
                app:border_width="0.5dp" />

            <TextView
                android:id="@+id/tv_merchant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorBlack2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/icon_arrow_right_gray_14_26"
                android:text="@string/label_enter_shop___cv"
                android:textColor="@color/colorGray"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_merchant_cover"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/merchant_layout"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_merchant_cover"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:paddingBottom="6dp"
            android:textColor="#B3ffffff"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <View
        android:id="@+id/cpm_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageAvatar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/icon_avatar_primary</item>
        <item name="corner_radius">20dp</item>
    </style>

    <style name="MessageUserRole">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack3</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MessageUserTag">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MessageLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="MessageLayout.Left" parent="MessageLayout">
        <item name="android:background">@drawable/sl_bg_bubble_left_white</item>
    </style>

    <style name="MessageLayout.Right" parent="MessageLayout">
        <item name="android:background">@drawable/sl_bg_bubble_right_white</item>
    </style>

    <style name="MessageImagesItem">
        <item name="android:background">@color/colorImageBackground</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>


    <style name="MessageVoiceLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:maxWidth">140dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@drawable/sp_bg_live_voice</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MessageVoiceDuration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textSize">@dimen/medium_text_size2</item>
        <item name="android:textColor">@color/colorBlack3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MessageVoiceWave">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
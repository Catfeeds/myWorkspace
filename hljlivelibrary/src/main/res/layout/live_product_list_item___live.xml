<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/product_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_product_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/medium_text_size1"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/product_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_clickable_background"
        android:clickable="true"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@color/colorImageBackground"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_toRightOf="@id/img_cover"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_work_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="2"
                    android:text="@string/app_name"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/ex_medium_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hot_tag"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/sp_r2_stroke_primary"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/ex_small_text_size"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/label_rmb___live"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size3" />

                <TextView
                    android:id="@+id/tv_wedding_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/ex_medium_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_wedding_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:includeFontPadding="false"
                    android:text="@string/label_collect_count___live"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size3" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/bottom_thin_line_layout"
        style="@style/line_horizontal"
        android:layout_marginLeft="16dp"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_thick_line_layout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackground"
        android:visibility="gone" />

</LinearLayout>
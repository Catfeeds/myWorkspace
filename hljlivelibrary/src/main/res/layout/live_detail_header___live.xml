<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/live_header_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorImageBackground"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="57dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_live_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#33000000"
            android:shadowRadius="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/medium_text_size3" />

        <ImageView
            android:id="@+id/icon_status_start"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="3dp"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.hunliji.hljcommonlibrary.views.widgets.SingleLineLayout
                android:id="@+id/watch_users_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_watch_count"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/sp_r15_alpha_50_black"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/label_watch_count___live"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ex_small_text_size" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:id="@+id/merchant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <CheckBox
                android:id="@+id/cb_merchant"
                style="@style/shop_cart_check_box_theme"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="8dp" />

            <ImageView
                android:id="@+id/img_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:src="@drawable/icon_merchant_gray_36_32" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size2" />

                <TextView
                    android:id="@+id/tv_get_coupon"
                    android:layout_width="28dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/sp_r2_primary"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="领劵"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/shop_gift_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_arrow_right_dark_gray_14_26" />
        </LinearLayout>

        <View style="@style/line_horizontal" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/image_bg_wedding_card_page_view"
        android:paddingBottom="6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/page_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/icon_edit"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_edit_primary_57_57"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/add_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="150dp"
                android:layout_height="194dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:paddingBottom="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/image_page_add"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/img_add"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sp_r15_primary"
                android:gravity="center"
                android:text="@string/btn_add_page"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/medium_text_size1"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
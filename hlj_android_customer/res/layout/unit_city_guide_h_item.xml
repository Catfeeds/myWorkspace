<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <View
        android:id="@+id/start_padding"
        android:layout_width="11dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="210dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorBlack2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/icon_eye_gray_30_23" />

            <TextView
                android:id="@+id/tv_watch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/icon_comment_gray_34_32" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/icon_praise_gray_40_40" />

            <TextView
                android:id="@+id/tv_praise_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/end_padding"
        android:layout_width="11dp"
        android:layout_height="1dp"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<me.suncloud.marrymemo.widget.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:isChecked2="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:duplicateParentState="true"
        android:background="@drawable/sl_trans_2_tab_checked">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="哈哈哈"
            android:textColor="@color/menu_tab_text_color"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/news_icon"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignTop="@id/title"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/title"
            android:background="@drawable/sp_oval_accent"
            android:visibility="gone" />
    </RelativeLayout>

</me.suncloud.marrymemo.widget.CheckableRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/cv_more_channel"
        android:layout_width="114dp"
        android:layout_height="67dp"
        android:background="@drawable/icon_community_card_bg"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_more_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="查看全部"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_more_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@mipmap/icon_arrow_right_black_24_24"
            android:tint="@color/colorGray3" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:src="@drawable/icon_car_entry_title"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/city_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/sp_r2_background2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/label_city"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_arrow_down_gray_28_18"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/city_layout"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sp_r2_background2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="日期"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_arrow_down_gray_28_18"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/date_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sl_r2_r_primary_2_dark"
        android:text="@string/btn_car_entry_confirm"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold" />

    <include layout="@layout/hlj_progressbar___cm" />

</RelativeLayout>
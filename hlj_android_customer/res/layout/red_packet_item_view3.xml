<?xml version="1.0" encoding="utf-8"?>
<me.suncloud.marrymemo.widget.CheckableLinearLayoutButton xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="12dp"
    app:isChecked="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_money_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="20元（红包名称）"
            android:textColor="@color/black2_primary"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:duplicateParentState="true"
            android:text="无门槛金额限制"
            android:textColor="@color/black2_primary"
            android:textSize="@dimen/medium_text_size3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_use_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="不使用红包"
            android:textColor="@color/black2_primary"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="gone" />

    </LinearLayout>

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/sl_ic_sp_check"
        android:duplicateParentState="true"
        android:textColor="@color/black2_primary" />

</me.suncloud.marrymemo.widget.CheckableLinearLayoutButton>
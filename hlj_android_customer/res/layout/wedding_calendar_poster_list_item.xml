<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="300dp"
        android:layout_height="445dp"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/ex_medium_text_size" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:layout_marginTop="-10dp"
                android:includeFontPadding="false"
                android:text="00"
                android:textColor="@color/colorBlack2"
                android:textSize="100sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lunar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_marriage_tag"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_yi_tag_94_94" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:includeFontPadding="false"
                    android:text="@string/label_marriage"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

                <ImageView
                    android:id="@+id/img_engagement_tag"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="30dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_yi_tag_94_94" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:includeFontPadding="false"
                    android:text="@string/label_engagement"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_betrothal_gift_tag"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_yi_tag_94_94" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:includeFontPadding="false"
                    android:text="@string/label_betrothal_gift"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

                <ImageView
                    android:id="@+id/img_uxorilocal_marriage_tag"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="30dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_yi_tag_94_94" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:includeFontPadding="false"
                    android:text="@string/label_uxorilocal_marriage"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wedding_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wedding_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="@string/app_name"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="结婚热度"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                    <ImageView
                        android:id="@+id/img_hot_tag"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_hot_primary_28_36" />

                    <ImageView
                        android:id="@+id/img_hot_tag2"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="4dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_hot_primary_28_36" />

                    <ImageView
                        android:id="@+id/img_hot_tag3"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="4dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_hot_primary_28_36" />

                    <ImageView
                        android:id="@+id/img_hot_tag4"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="4dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_hot_primary_28_36" />

                    <ImageView
                        android:id="@+id/img_hot_tag5"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="4dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_hot_primary_28_36" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_app_qr_code_280_280" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="2dp"
                        android:text="用大数据查好日子\n获取同城结婚热度"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_jixiaoxi_36_36" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:includeFontPadding="false"
                            android:text="来自婚礼纪"
                            android:textColor="@color/colorGray2"
                            android:textSize="@dimen/medium_text_size3" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>

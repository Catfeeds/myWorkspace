<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_import_guests"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:drawableLeft="@mipmap/icon_cross_add_round_blue_40_40"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="从已添加的宾客中选择"
            android:textColor="@color/colorLink"
            android:textSize="@dimen/ex_medium_text_size2" />

        <View
            style="@style/line_horizontal"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_delete_table"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/sl_color_white_2_background2"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="删除本桌，并将宾客移至待安排桌" />

    </LinearLayout>

</RelativeLayout>

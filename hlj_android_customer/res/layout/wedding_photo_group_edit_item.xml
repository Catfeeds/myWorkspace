<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/action_modify_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:background="@color/colorWhite">

        <me.suncloud.marrymemo.widget.community.WeddingGroupPhotosView
            android:id="@+id/photos_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignBottom="@id/photos_view"
            android:layout_alignRight="@id/photos_view"
            android:background="@drawable/sp_round2_top_left_white"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_edit_white_20_20" />

            <TextView
                android:id="@+id/tv_modify_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:text="@string/label_wedding_photo_modify"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/medium_text_size3" />
        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:gravity="top"
        android:hint="@string/hint_wedding_photo_describe"
        android:minHeight="110dp"
        android:maxLength="120"
        android:padding="16dp"
        android:textColor="@color/colorBlack2"
        android:textSize="@dimen/medium_text_size1" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp_r4_white"
    android:paddingBottom="30dp"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/phone_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:hint="绑定手机号"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lines="1"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/ex_medium_text_size" />

        <ImageButton
            android:id="@+id/btn_sms_certify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_arrow_right_round_primary_64_64" />


        <TextView
            android:id="@+id/tv_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_resend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:minWidth="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:text="@string/label_reload"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="gone" />

        <View
            android:id="@+id/phone_line"
            style="@style/line_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/certify_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/phone_edit_layout"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_certify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:hint="输入验证码"
            android:inputType="number"
            android:lines="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/ex_medium_text_size" />

        <ImageButton
            android:id="@+id/btn_certify_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_arrow_right_round_primary_64_64" />

        <Button
            android:id="@+id/btn_voice_certify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_certify_check"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:minWidth="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/label_voice_certify_unreceive"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="gone" />

        <View
            style="@style/line_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_edit_layout"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机号，获得4大专项特权"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size2"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/icon_check_round_green_48_48"
                android:text="@string/label_third_login_bind_privilege_1"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/icon_check_round_green_48_48"
                android:text="@string/label_third_login_bind_privilege_2"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/icon_check_round_green_48_48"
                android:text="@string/label_third_login_bind_privilege_3"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/icon_check_round_green_48_48"
                android:text="@string/label_third_login_bind_privilege_4"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size3" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
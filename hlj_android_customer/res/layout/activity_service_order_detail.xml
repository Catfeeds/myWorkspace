<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_service_order_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="me.suncloud.marrymemo.view.orders.ServiceOrderDetailActivity">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible">

            <View style="@style/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_bottom_money_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_order_price2"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size2" />

                <TextView
                    android:id="@+id/tv_bottom_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/rmb"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_bottom_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/ex_huge_text_size" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_delete_order"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/sl_r15_stroke_gray_2_solid_light"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="删除订单"
                    android:textColor="@color/stroke_gray_text_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_delay_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/sl_r15_stroke_gray_2_solid_light"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="@string/label_delay_confirm"
                    android:textColor="@color/stroke_gray_text_color"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_action"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/sl_r15_primary_2_dark"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="去支付"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text_size1" />

            </LinearLayout>
        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/order_alert_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_yellow3"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="@color/color_orange2"
                        android:textSize="@dimen/medium_text_size2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/orange_line" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:paddingBottom="18dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="18dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_customer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:text="解决方案"
                                android:textColor="@color/colorBlack2"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:drawablePadding="8dp"
                                android:textColor="@color/colorBlack2"
                                android:textSize="15sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/serve_time_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务时间："
                                android:textColor="@color/colorGray"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_serve_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hint_serve_time2"
                                android:textColor="@color/colorBlack2"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/icon_arrow_right_gray_14_26"
                        android:visibility="gone" />

                </LinearLayout>

                <!--商家、套餐信息和操作-->
                <LinearLayout
                    android:id="@+id/work_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_merchant_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/icon_merchant_gray_36_32"
                                    android:drawablePadding="8dp"
                                    android:drawableRight="@mipmap/icon_arrow_right_gray_14_26"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:lines="1"
                                    android:textColor="@color/colorBlack2"
                                    android:textSize="@dimen/medium_text_size1" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_order_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/medium_text_size1" />

                        </LinearLayout>

                        <View style="@style/line_horizontal" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/img_cover"
                                android:layout_width="160dp"
                                android:layout_height="90dp"
                                android:background="@color/colorImageBackground"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/img_installment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_installment_tag"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/img_intent_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_intent_money_tag"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_toRightOf="@id/img_cover"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textColor="@color/colorBlack2"
                                android:textSize="@dimen/medium_text_size1" />

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_title"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="12dp"
                                android:layout_toRightOf="@id/img_cover"
                                android:text="@string/label_price4"
                                android:textColor="@color/colorBlack2"
                                android:textSize="@dimen/medium_text_size2" />

                        </RelativeLayout>

                        <!--活动优惠-->
                        <LinearLayout
                            android:id="@+id/sales_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View style="@style/line_horizontal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="活动优惠:"
                                    android:textColor="@color/colorGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_sales_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:lines="1"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <View style="@style/line_horizontal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:weightSum="3">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/sl_r15_stroke_gray_2_solid_light"
                                android:text="@string/label_contact_merchant"
                                android:textColor="@color/stroke_gray_text_color"
                                android:textSize="@dimen/medium_text_size2"
                                android:visibility="invisible" />

                            <Button
                                android:id="@+id/btn_action1"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:background="@drawable/sl_r15_half_stroke_primary_2_solid_light"
                                android:text="私信商家"
                                android:textColor="@color/stroke_primary_text_color"
                                android:textSize="@dimen/medium_text_size2" />

                            <Button
                                android:id="@+id/btn_action2"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:background="@drawable/sl_r15_stroke_gray_2_solid_light"
                                android:text="电话商家"
                                android:textColor="@color/stroke_gray_text_color"
                                android:textSize="@dimen/medium_text_size2" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--订单留言-->
                <LinearLayout
                    android:id="@+id/customer_message_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单留言："
                        android:textColor="@color/colorGray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="@color/colorBlack2"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--协议图片-->
                <LinearLayout
                    android:id="@+id/protocol_pics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/label_agreement_pics"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                    <include layout="@layout/line_layout" />

                    <GridLayout
                        android:id="@+id/grid_protocol_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="9dp"
                        android:columnCount="3"
                        android:visibility="visible" />

                </LinearLayout>

                <!--付款信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/pay_method_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="16dp"
                                android:text="支付方式："
                                android:textColor="@color/colorGray"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_pay_method"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="全款支付"
                                android:textColor="@color/colorBlack2"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View style="@style/line_horizontal" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="套餐价格:"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_work_price2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorBlack2"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_now_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_now_money_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本次定金支付:"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_pay_now_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_all_saved_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全款礼:"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_pay_all_saved_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorBlack2"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupon_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券:"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_coupon_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorBlack2"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/red_packet_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红包优惠:"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_red_packet_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorBlack2"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paid_intent_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_paid_intent_money_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意向金已付:"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_paid_intent_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paid_deposit_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_paid_deposit_money_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已付定金:"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_paid_deposit_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paid_rest_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_paid_rest_money_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已付余款"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_paid_rest_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        style="@style/line_horizontal"
                        android:layout_marginTop="7dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_total_money_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本次全款支付:"
                                android:textColor="@color/colorGray"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_total_money"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorBlack2"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_pay_all_saved_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/label_pay_all_saved_hint"
                            android:textColor="@color/colorBlack2"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <!--底部订单提示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_order_num"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/medium_text_size1" />

                        <TextView
                            android:id="@+id/tv_order_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_ording_time"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/medium_text_size1" />

                        <TextView
                            android:id="@+id/tv_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_prepay_remind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size2"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

        <ImageButton
            android:id="@+id/btn_lucky_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/image_hint_free_order"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/hlj_progressbar___cm" />

</RelativeLayout>

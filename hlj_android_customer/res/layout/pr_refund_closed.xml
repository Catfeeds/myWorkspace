<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="4dp">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/icon_refund_tag_blue"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_refund_status"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:text="商家拒绝退款"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size2" />
        </LinearLayout>

        <include layout="@layout/line_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/label_refund_declined_reason___cm"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/label_refund_declined_hint"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="visible" />

        <!--再次申请-->
        <LinearLayout
            android:id="@+id/apply_again_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你还可以："
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/tv_apply_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_apply_again"
                android:textColor="@color/colorLink"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="或"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/tv_contact_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_contact_service4"
                android:textColor="@color/colorLink"
                android:textSize="@dimen/medium_text_size1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
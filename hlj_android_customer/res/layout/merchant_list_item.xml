<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_color_white_2_background2">

    <com.makeramen.rounded.RoundedImageView
        android:id="@+id/logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:border_color="@color/colorLine"
        app:border_width="0.5dp"
        app:corner_radius="4dp"
        app:round_background="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:layout_marginRight="12dp"
            android:lines="1"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/ex_medium_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/icons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/level_icon"
                    android:layout_width="66dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_merchant_level2_149_36"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/bond_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_bond_36_36"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/refund_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_refund_tag_36_36"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/promise_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_promise_tag_36_36"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/free_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_free_tag_36_36"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/gift_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_gift_tag"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/exclusive_offer_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_discount_tag"
                    android:visibility="gone"/>

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/coupon_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_coupon_primary_36_36"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rmb"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size3"/>

                <TextView
                    android:id="@+id/tv_hotel_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_hotel_desk2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size3"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_work_count"
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/medium_text_size3"/>

            <TextView
                android:id="@+id/tv_label2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_case_count"
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/medium_text_size3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_label3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/merchant_collect_count"
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/medium_text_size3"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_gift_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:background="@drawable/sp_r2_stroke_primary_solid_white"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/label_shop_gift"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/small_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="@string/label_reserve_get"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size3"/>


        <TextView
            android:id="@+id/shop_gift_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cost_effective_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_gift_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:background="@drawable/sp_r2_stroke_primary_solid_white"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/label_cost_effective"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/small_text_size"/>

        <TextView
            android:id="@+id/cost_effective_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size3"/>
    </LinearLayout>

    <View
        android:id="@+id/merchant_list_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/cost_effective_layout"
        android:layout_marginLeft="12dp"
        android:background="@color/colorLine"/>

    <FrameLayout
        android:id="@+id/promote_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/cost_effective_layout"
        android:background="@color/colorBackground"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/sp_promote_bg"
            android:includeFontPadding="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/label_promote"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/small_text_size"/>

    </FrameLayout>

</RelativeLayout>
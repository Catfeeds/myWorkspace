<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="match_parent">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="40dp"
        android:background="@color/colorLine"/>

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:duplicateParentState="true"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:paddingTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_check_primary_32_20"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/label_font_default"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_font_icon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/progressbar_layout"
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/sp_r4_2_stroke_black7"
            android:padding="2dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressbar"
                style="@style/downloadProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_font_size"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/icon_arrow_down_round_yellow_32_32"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_yellow"
            android:textSize="@dimen/medium_text_size3"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>
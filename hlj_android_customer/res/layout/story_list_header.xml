<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/story_list_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/label_my_story_list_tip"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size2" />


            <TextView
                android:id="@+id/write_story_btn"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/sp_r15_half_stroke_primary"
                android:gravity="center"
                android:text="@string/label_my_story_write_tip"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_text_size2" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/label_my_story_other_tip"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

        <RadioGroup
            android:id="@+id/story_sort_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/story_sort_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/sort_all"
                android:textColor="@color/gray1_primary"
                android:textSize="@dimen/medium_text_size3" />

            <RadioButton
                android:id="@+id/story_sort_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:gravity="center"
                android:text="@string/label_hot"
                android:textColor="@color/gray1_primary"
                android:textSize="@dimen/medium_text_size3" />

            <RadioButton
                android:id="@+id/story_sort_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:text="@string/label_new_thread"
                android:textColor="@color/gray1_primary"
                android:textSize="@dimen/medium_text_size3" />

        </RadioGroup>
    </RelativeLayout>
</LinearLayout>
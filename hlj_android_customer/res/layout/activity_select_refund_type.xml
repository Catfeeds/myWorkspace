<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.suncloud.marrymemo.view.SelectRefundTypeActivity">

    <LinearLayout
        android:id="@+id/refund_and_return_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_color_white_2_background2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="@string/label_refund_and_return"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@mipmap/icon_arrow_right_gray_14_26" />
    </LinearLayout>

    <include layout="@layout/line_layout" />

    <LinearLayout
        android:id="@+id/refund_only_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_color_white_2_background2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="@string/label_refund_only"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@mipmap/icon_arrow_right_gray_14_26" />
    </LinearLayout>

    <include layout="@layout/line_layout" />

</LinearLayout>

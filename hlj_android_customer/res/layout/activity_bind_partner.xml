<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="me.suncloud.marrymemo.view.binding_partner.BindPartnerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/img_my_avatar"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:scaleType="centerCrop"
                app:corner_radius="34dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_partner_link" />

            <ImageView
                android:id="@+id/img_partner_avatar"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_avatar_gray_154_154" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/sp_r20_stroke_line2_solid_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.hunliji.hljcommonlibrary.views.widgets.ClearableEditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:hint="@string/hint_enter_partner_phone"
                    android:imeOptions="actionGo"
                    android:inputType="phone"
                    android:textColorHint="#999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/icon_contact_primary_40_40"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="通讯录"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/sl_r20_primary_2_dark"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

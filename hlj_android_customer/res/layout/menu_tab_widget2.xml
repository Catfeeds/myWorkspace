<?xml version="1.0" encoding="utf-8"?>
<me.suncloud.marrymemo.widget.TabView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingTop="1dp"
        android:textColor="@color/menu_tab_text_color"
        android:textSize="@dimen/medium_text_size1" />

    <View
        android:layout_width="20dp"
        android:layout_height="2.5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sl_color_trans_2_r2_primary" />

</me.suncloud.marrymemo.widget.TabView>
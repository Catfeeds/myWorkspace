<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/label_wedding_recommend"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/wedding_prepare_item_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/wedding_prepare_item_group_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/wedding_prepare_item_group_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size1" />

            <LinearLayout
                android:id="@+id/wedding_prepare_item_group_list"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorImageBackground"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/wedding_prepare_item_group_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:background="@android:color/transparent"
                        android:src="@drawable/icon_new_tag_primary_54_54"
                        android:visibility="gone" />
                </FrameLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorImageBackground"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorImageBackground"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorImageBackground"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="16dp"
                        android:layout_gravity="right|bottom"
                        android:background="#88000000"
                        android:gravity="center"
                        android:text="共12张"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/small_text_size"
                        android:visibility='visible' />
                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/wedding_prepare_item_group_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="达人经验"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size3" />

                <TextView
                    android:id="@+id/wedding_prepare_item_group_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/icon_eye_gray_22_22"
                    android:drawablePadding="4dp"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size3" />

            </RelativeLayout>

            <View
                android:id="@+id/wedding_prepare_item_group_line_layout"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/colorLine" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wedding_prepare_item_thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <FrameLayout
                    android:id="@+id/wedding_prepare_item_thread_left"
                    android:layout_width="96dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/wedding_prepare_item_thread_image"
                        android:layout_width="96dp"
                        android:layout_height="60dp"
                        android:background="@color/colorImageBackground"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/wedding_prepare_item_thread_image_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:background="@android:color/transparent"
                        android:src="@drawable/icon_new_tag_primary_54_54" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/wedding_prepare_item_right"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/wedding_prepare_item_thread_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wedding_prepare_item_thread_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                    <TextView
                        android:id="@+id/wedding_prepare_item_thread_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/wedding_prepare_item_thread_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="专题"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size3" />

                <TextView
                    android:id="@+id/wedding_prepare_item_thread_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/icon_eye_gray_22_22"
                    android:drawablePadding="4dp"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size3" />

            </RelativeLayout>

            <View
                android:id="@+id/wedding_prepare_item_thread_line_layout"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/colorLine" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
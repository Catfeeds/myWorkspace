<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_correlation"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size1"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:scrollbars="none"
            />

        <include layout="@layout/line_layout"/>

        <LinearLayout
            android:id="@+id/more_product_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >

            <TextView
                android:id="@+id/more_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_more_work1"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3"
                />

            <TextView
                android:id="@+id/product_about_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_about_count"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_text_size3"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:src="@mipmap/icon_arrow_right_gray_14_26"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:id="@+id/tag_top_margin"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorBackground"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/img_tag"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_comment_round_gray_primary_32_32" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="3dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_alignLeft="@+id/tv_label"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/tv_label"
                    android:background="@color/red8" />

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/label_all_posts_tag"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有回帖,快来抢沙发~"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
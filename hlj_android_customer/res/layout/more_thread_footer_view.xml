<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/more_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/sp_r4_solid_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_more_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_round_white_80_80"/>

            <TextView
                android:id="@+id/tv_more_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:text="@string/label_more_prize_thread"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/ex_small_text_size" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="11dp"
        android:layout_height="30dp"
        android:background="@color/colorWhite" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="25dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|bottom"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_cross_close_round_gray_68_68" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="分享给好友收获祝福吧~"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/medium_text_size3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_share_wx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_share_wechat___cm" />

            <ImageButton
                android:id="@+id/btn_share_pengyou"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="28dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_share_pengyou___cm" />

            <ImageButton
                android:id="@+id/btn_share_qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="28dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_share_qq___cm" />

            <ImageButton
                android:id="@+id/btn_share_weibo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="28dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_share_weibo___cm" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/heard_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/heard_view"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <me.suncloud.marrymemo.widget.RecyclingImageView
                android:id="@+id/head_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/limit_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sp_r16_r_trans_pink"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_only_leave"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text_size"/>

                <TextView
                    android:id="@+id/limit_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text_size1"
                    android:textStyle="bold"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/payment_method_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/property_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/property"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sp_r2_stroke_primary"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/ex_medium_text_size"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/discount_type"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/image_bg_discount"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/rmb"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/ex_medium_text_size"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/large_text_size"/>

                <TextView
                    android:id="@+id/original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorGray2"
                    android:textSize="@dimen/medium_text_size2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/medium_text_size3"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/prepare_layout"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/sp_r4_dash_stroke_primary"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/prepare_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/medium_text_size3"/>

                    <TextView
                        android:id="@+id/prepare_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/label_price5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/medium_text_size3"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/prepare_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size3"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/earnest_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:visibility="gone">

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorLine"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/earnest_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_deposit_primary"/>

                    <TextView
                        android:id="@+id/earnest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="@string/label_earnest"
                        android:textColor="@color/colorBlack3"
                        android:textSize="@dimen/medium_text_size3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gift_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_gift_tag"/>

                    <TextView
                        android:id="@+id/gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="@string/label_gift"
                        android:textColor="@color/colorBlack3"
                        android:textSize="@dimen/medium_text_size3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pay_all_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_pay_all_tag"/>

                    <TextView
                        android:id="@+id/pay_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="@string/label_pay_all_gift"
                        android:textColor="@color/colorBlack3"
                        android:textSize="@dimen/medium_text_size3"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/merchant_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/payment_method_layout"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:visibility="visible">

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/merchant_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:scaleType="centerCrop"
                app:corner_radius="20dp"
                app:round_background="true"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/merchant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/merchant_name"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/level_icon"
                            android:layout_width="66dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/bond_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_bond_36_36"
                            android:visibility="gone"/>

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/merchant_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size3"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:layout_marginRight="12dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_arrow_right_gray_14_26" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bond_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone">

            <include layout="@layout/line_layout"/>

            <LinearLayout
                android:id="@+id/bond_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sp_r12_r_color_56af60"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/label_bond_more"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text_size3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_arrow_right_white_14_26"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bond_info_layout"
                android:background="@drawable/sp_r12_l_80d089"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_bond_white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:text="@string/label_bond_info"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text_size3"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_merchant_comment_count"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1"/>

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/comment_count"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_avatar_primary"
                app:corner_radius="15dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_count"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/time"
                android:layout_toRightOf="@+id/avatar"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size2"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/comment_count"
                android:layout_marginRight="14dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:id="@id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginRight="14dp"
                android:layout_toRightOf="@+id/avatar"
                android:paddingBottom="15dp"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1"/>

            <RelativeLayout
                android:id="@+id/more_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/content"
                android:background="@drawable/sl_color_white_2_background2"
                android:visibility="gone">

                <include layout="@layout/line_layout"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_arrow_right_gray_14_26"
                    android:gravity="center_vertical"
                    android:text="@string/label_more2"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size1"/>

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="@string/label_buy_process"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size1"/>

            <me.suncloud.marrymemo.widget.RecyclingImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
        </LinearLayout>

        <include layout="@layout/work_info_more"/>

    </LinearLayout>
</RelativeLayout>
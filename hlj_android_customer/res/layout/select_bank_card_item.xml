<?xml version="1.0" encoding="utf-8"?>
<me.suncloud.marrymemo.widget.CheckableLinearLayoutButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingRight="12dp"
    android:background="@drawable/sp_trans_bottom_line"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_bank_logo"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack3"
        android:textSize="@dimen/medium_text_size2" />

    <TextView
        android:id="@+id/tv_bank_card_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/small_text_size" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/app_name"
        android:duplicateParentState="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sl_ic_sp_check" />

</me.suncloud.marrymemo.widget.CheckableLinearLayoutButton>
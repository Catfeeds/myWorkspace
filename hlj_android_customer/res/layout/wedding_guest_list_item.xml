<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_cross_delete_round_gray_40_40" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingRight="16dp"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/ex_medium_text_size2"
                android:textStyle="bold"
                tools:text="@string/app_name" />

            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="30dp"
                android:background="@drawable/sp_r3_stroke_line2_solid_white"
                android:gravity="center_vertical"
                android:minWidth="28dp">

                <ImageButton
                    android:id="@+id/btn_subtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_subtraction_gray_24_4" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minEms="1"
                    android:text="0"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size2" />

                <ImageButton
                    android:id="@+id/btn_plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_cross_add_primary_24_24" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/line_horizontal"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

</RelativeLayout>

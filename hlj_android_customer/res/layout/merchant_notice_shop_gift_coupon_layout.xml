<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/hljColorSegmentBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_clickable_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginRight="10dp"
            android:background="?attr/hljDrawableR2StrokePrimary"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/label_notice"
            android:textColor="?attr/hljColorPrimary"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textColor="?attr/hljColorContent2"
            android:textSize="@dimen/medium_text_size1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_arrow_right_dark_gray_14_26"
            android:tint="?attr/hljColorContentExt2" />

    </LinearLayout>

    <View
        android:id="@+id/notice_bottom_line_layout"
        style="@style/line_horizontal"
        android:layout_marginLeft="16dp"
        android:background="?attr/hljColorLine" />

    <LinearLayout
        android:id="@+id/shop_gift_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_clickable_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginRight="10dp"
            android:background="?attr/hljDrawableR2StrokePrimary"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/label_shop_gift"
            android:textColor="?attr/hljColorPrimary"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shop_gift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:paddingRight="12dp"
            android:text="@string/app_name"
            android:textColor="?attr/hljColorContent2"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/tv_shop_gift_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/label_shop_gift_received_count"
            android:textColor="?attr/hljColorContentExt2"
            android:textSize="@dimen/medium_text_size2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_arrow_right_dark_gray_14_26"
            android:tint="?attr/hljColorContentExt2" />

    </LinearLayout>

    <View
        android:id="@+id/shop_gift_bottom_line_layout"
        style="@style/line_horizontal"
        android:layout_marginLeft="16dp"
        android:background="?attr/hljColorLine" />

    <LinearLayout
        android:id="@+id/coupon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_clickable_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginRight="10dp"
            android:background="?attr/hljDrawableR2StrokePrimary"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/label_coupon"
            android:textColor="?attr/hljColorPrimary"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1.0"
            android:includeFontPadding="false"
            android:text="@string/label_coupon_count2"
            android:textColor="?attr/hljColorContent2"
            android:textSize="@dimen/medium_text_size1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_arrow_right_dark_gray_14_26"
            android:tint="?attr/hljColorContentExt2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exclusive_offer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_clickable_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginRight="10dp"
            android:background="?attr/hljDrawableR2StrokePrimary"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="优惠"
            android:textColor="?attr/hljColorPrimary"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_exclusive_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:textColor="?attr/hljColorContent2"
            android:textSize="@dimen/medium_text_size1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_arrow_right_dark_gray_14_26"
            android:tint="?attr/hljColorContentExt2" />

    </LinearLayout>

    <View
        android:id="@+id/subscribe_hotel_top_line_layout"
        style="@style/line_horizontal"
        android:background="?attr/hljColorLine" />

    <LinearLayout
        android:id="@+id/subscribe_hotel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sl_clickable_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_subscribe_primary_26_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:includeFontPadding="false"
            android:text="订阅该酒店最新优惠信息"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_arrow_right_primary_14_26" />

    </LinearLayout>

</LinearLayout>
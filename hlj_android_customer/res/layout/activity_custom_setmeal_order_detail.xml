<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.suncloud.marrymemo.view.CustomSetmealOrderDetailActivity">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/line_layout" />

        <LinearLayout
            android:id="@+id/order_action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pay_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_order_price2"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/rmb"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_final_total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/ex_huge_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_price_extra_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_allow_deposit2"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size3"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_order_action"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/sl_r15_primary_2_dark"
                android:gravity="center"
                android:minWidth="96dp"
                android:text="@string/label_go_pay"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/medium_text_size1" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_order_action2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/sl_color_primary_2_dark"
            android:gravity="center"
            android:text="@string/label_confirm_service"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ex_medium_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout">

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            /*order alert layout*/

            <LinearLayout
                android:id="@+id/order_alert_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/color_yellow3"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/orange_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_alert_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="等待付款"
                            android:textColor="@color/color_orange2"
                            android:textSize="@dimen/ex_medium_text_size"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_alert_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.3"
                            android:text="@string/label_order_expired_time"
                            android:textColor="@color/color_orange2"
                            android:textSize="@dimen/medium_text_size1"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/orange_line" />

            </LinearLayout>

            <!--协议图片-->
            <LinearLayout
                android:id="@+id/protocol_pics_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/label_agreement_pics"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

                <include layout="@layout/line_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_pic1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/sp_stroke_line_solid_white"
                            android:padding="0.5dp"
                            android:scaleType="centerInside"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_pic2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/sp_stroke_line_solid_white"
                            android:padding="0.5dp"
                            android:scaleType="centerInside"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_pic3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/sp_stroke_line_solid_white"
                            android:padding="0.5dp"
                            android:scaleType="centerInside"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_pic4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/sp_stroke_line_solid_white"
                            android:padding="0.5dp"
                            android:scaleType="centerInside"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_pic5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/sp_stroke_line_solid_white"
                            android:padding="0.5dp"
                            android:scaleType="centerInside"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_pic6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/sp_stroke_line_solid_white"
                            android:padding="0.5dp"
                            android:scaleType="centerInside"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!--商家补充信息-->
            <LinearLayout
                android:id="@+id/merchant_message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="@string/label_merchant_additional_info"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

                <include layout="@layout/line_layout" />

                <TextView
                    android:id="@+id/tv_merchant_additional_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingBottom="16dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="16dp"
                    android:text="经济法卡机的立是京东方卢卡斯京东方按揭贷款放假啊肯德基付款撒娇的疯狂撒娇付款交罚款是"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size1" />
            </LinearLayout>

            <!--服务时间-->
            <LinearLayout
                android:id="@+id/serve_time_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_serve_time2"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size1" />

                <TextView
                    android:id="@+id/tv_serve_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-11-11"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size1" />

            </LinearLayout>

            <!-- 套餐信息 -->
            <LinearLayout
                android:id="@+id/setmeal_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/merchant_layout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/icon_merchant_gray_36_32" />

                    <TextView
                        android:id="@+id/tv_merchant_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size2" />

                    <TextView
                        android:id="@+id/tv_refund_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/medium_text_size2"
                        android:visibility="gone" />

                </LinearLayout>

                <include layout="@layout/line_layout" />

                <LinearLayout
                    android:id="@+id/items_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <RelativeLayout
                        android:id="@+id/img_cover_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <me.suncloud.marrymemo.widget.RecyclingImageView
                            android:id="@+id/img_cover"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            android:background="@color/colorImageBackground"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/img_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/icon_custom_tag_yellow_90_90"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="定制套餐"
                            android:textColor="@color/colorBlack2"
                            android:textSize="@dimen/medium_text_size1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:singleLine="true"
                                android:text="@string/label_price4"
                                android:textColor="@color/colorBlack2"
                                android:textSize="@dimen/medium_text_size2" />

                            <TextView
                                android:id="@+id/tv_refund_money"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:singleLine="true"
                                android:text="@string/label_refunded_money4"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/medium_text_size2"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--价格付款信息-->
            <LinearLayout
                android:id="@+id/prices_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:visibility="visible">

                <include layout="@layout/line_layout" />

                <LinearLayout
                    android:id="@+id/setmeal_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/label_custom_setmeal_price"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />

                    <TextView
                        android:id="@+id/tv_setmeal_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:text="@string/label_price"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/red_packet_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/label_red_packet_discount"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />

                    <TextView
                        android:id="@+id/tv_red_packet_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:text="@string/label_price"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/real_pay_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_real_pay_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/label_real_pay"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />

                    <TextView
                        android:id="@+id/tv_real_pay_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:text="@string/label_price"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/allow_pay_deposit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/label_allow_deposit4"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />

                    <TextView
                        android:id="@+id/tv_allow_deposit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:text="@string/label_price"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/medium_text_size1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pay_history_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/sp_r4_stroke_line_solid_background"
                    android:orientation="vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:includeFontPadding="false"
                        android:text="@string/label_pay_history"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />

                    <LinearLayout
                        android:id="@+id/pay_history_items_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/total_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <include layout="@layout/line_layout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:id="@+id/tv_total_price_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/label_need_pay_rest"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/medium_text_size1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:includeFontPadding="false"
                            android:text="@string/rmb"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/medium_text_size1" />

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:includeFontPadding="false"
                            android:text="100"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/large_text_size" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

            </LinearLayout>

            <!--评价-->
            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/user_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <com.makeramen.rounded.RoundedImageView
                            android:id="@+id/user_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_avatar_primary"
                            app:corner_radius="20dp"
                            app:round_background="true" />

                        <TextView
                            android:id="@+id/tv_user_nick"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/medium_text_size2" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/comment_content_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_info_layout"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:textColor="@color/colorBlack3"
                            android:textSize="@dimen/medium_text_size1" />


                        <me.suncloud.marrymemo.widget.HorizontalListView
                            android:id="@+id/comment_imgs_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/content"
                            android:layout_marginTop="12dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <!--可支付定金layout-->
            <LinearLayout
                android:id="@+id/allow_deposit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/line_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="@string/label_allow_deposit6"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size2" />
                </LinearLayout>
            </LinearLayout>


            /*actions layout*/

            <LinearLayout
                android:id="@+id/actions_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/line_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_chat"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/sl_r15_stroke_gray_2_solid_light"
                        android:text="@string/label_contact_merchant"
                        android:textColor="@color/stroke_gray_text_color"
                        android:textSize="@dimen/medium_text_size2" />

                    <Button
                        android:id="@+id/btn_call"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/sl_r15_stroke_gray_2_solid_light"
                        android:text="@string/label_call_up2"
                        android:textColor="@color/stroke_gray_text_color"
                        android:textSize="@dimen/medium_text_size2" />

                </LinearLayout>
            </LinearLayout>

            <!--订单礼-->
            <LinearLayout
                android:id="@+id/privilege_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/colorBackground"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/tv_earnest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:text="@string/label_earnest"
                        android:textColor="@color/colorBlack3"
                        android:textSize="@dimen/medium_text_size3"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:text="@string/label_gift"
                        android:textColor="@color/colorBlack3"
                        android:textSize="@dimen/medium_text_size3"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <!--ordering info layout-->
            <LinearLayout
                android:id="@+id/ordering_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_order_num"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />

                    <TextView
                        android:id="@+id/tv_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_order_time2"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/medium_text_size1" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/medium_text_size1" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_contact_service"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/sl_stroke_line_white_2_line"
                android:text="@string/label_contact_service4"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size1" />

        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <include layout="@layout/progressbar_layout" />
</RelativeLayout>

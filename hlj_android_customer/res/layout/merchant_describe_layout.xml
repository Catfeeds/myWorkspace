<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/hljColorSegmentBackground"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_merchant_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:padding="16dp"
        android:textColor="?attr/hljColorContent2"
        android:textSize="@dimen/medium_text_size1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_images_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_merchant_describe"
        android:overScrollMode="never"
        android:scrollbars="none" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.makeramen.rounded.RoundedImageView
        android:id="@+id/merchant_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_avatar_primary"
        app:corner_radius="40dp"
        app:round_background="true" />

    <TextView
        android:id="@+id/merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:textColor="@color/colorBlack2"
        android:textSize="@dimen/ex_medium_text_size" />
    s

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/label_know_merchant_way"
        android:textColor="@color/colorBlack3"
        android:textSize="@dimen/medium_text_size1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bought_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onWork"
            android:scaleType="centerCrop"
            android:src="@drawable/image_hint_bought_work" />

        <ImageView
            android:id="@+id/bought_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMerchant"
            android:scaleType="centerCrop"
            android:src="@drawable/image_hint_bought_merchant" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorImageBackground"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorWhite" />

            <ImageView
                android:id="@+id/img_triangle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"/>

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/img_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_avatar_primary"
                app:border_color="@color/colorWhite"
                app:border_width="1dp"
                app:corner_radius="40dp" />

            <ImageView
                android:id="@+id/img_vip"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/img_avatar"
                android:layout_alignRight="@+id/img_avatar"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_vip_yellow_28_28"
                android:visibility="visible" />


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_layout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:textColor="@color/colorBlack2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:lines="1"
            android:text="@string/label_wedding_date"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />

        <View
            style="@style/line_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:textColor="@color/colorBlack2"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_photo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_wedding_photo_count"
                android:textColor="@color/colorBlack3"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/label_wedding_photo_city"
                android:textColor="@color/colorBlack3"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_photo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/label_wedding_photo_price"
                android:textColor="@color/colorBlack3"
                android:textSize="13sp"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_watch_black3_40_40"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="9999"
                android:textColor="@color/colorBlack3"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/colorBlack2"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
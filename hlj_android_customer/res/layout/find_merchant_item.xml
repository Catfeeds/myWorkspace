<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/merchant_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/merchant_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/img_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_avatar_primary"
                app:border_color="@color/colorLine"
                app:border_width="0.5dp"
                app:corner_radius="2dp"
                app:round_background="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:paddingTop="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_level_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_merchant_level2___cm"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/ex_medium_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/star_rating_bar"
                        style="@style/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/merchant_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorBlack3"
                        android:textSize="@dimen/ex_small_text_size"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/icons_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_bond_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_bond_36_36"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_refund_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_refund_tag_36_36"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_promise_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_promise_tag_36_36"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_free_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_free_tag_36_36"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_gift_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_gift_tag"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_exclusive_offer_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_discount_tag"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_coupon_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_coupon_primary_36_36"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_gift_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="34dp"
                android:layout_height="14dp"
                android:background="@drawable/sp_r2_stroke_primary"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="到店礼"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="预约即可领取"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size1" />

            <TextView
                android:id="@+id/shop_gift_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cost_effective_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/sp_r2_stroke_primary"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="超划算"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/cost_effective_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shop_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/shop_photo_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:background="@color/colorImageBackground"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/shop_photo_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/colorImageBackground"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/shop_photo_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/colorImageBackground"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_area_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack3"
                    android:textSize="@dimen/medium_text_size1" />

                <View
                    android:id="@+id/vertical_line"
                    android:layout_width="0.5dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/colorGray3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack3"
                    android:textSize="@dimen/medium_text_size1" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_contact_merchant"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sp_r3_half_stroke_line2_solid_white"
                android:gravity="center"
                android:text="联系商家"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size1" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/line_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/merchant_info_view"
        android:layout_marginLeft="16dp"
        android:background="@color/colorLine"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_ultimate_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_ultimate_tag"
        android:visibility="gone" />

</RelativeLayout>
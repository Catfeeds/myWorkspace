<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white2">

    <LinearLayout
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0.5dp"
        android:paddingRight="0.5dp"
        android:paddingBottom="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:id="@+id/plan_content_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="0.5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size1"
                    android:text="@string/label_start_time"/>

                <TextView
                    android:id="@+id/plan_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text_size1"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorBlack2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="0.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size1"
                    android:text="@string/label_plan_content"/>

                <TextView
                    android:id="@+id/plan_content"
                    android:text="jfakdjfakjdakjfsdkjf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text_size1"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorBlack2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="0.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text_size1"
                    android:text="@string/label_plan_crew"/>

                <TextView
                    android:id="@+id/plan_crew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text_size1"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorBlack2"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/delete_child_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="0.5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_delete_child_prog"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_text_size1"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_delete_round_primary_white_48_48"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_margin="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_child_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="0.5dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_add_flow"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_text_size1"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_cross_add_round_primary_white_48_48"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_margin="8dp"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/collapse_group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="0.5dp"
        android:visibility="visible"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_collapse"
            android:textColor="@color/colorGray"
            android:drawablePadding="8dp"
            android:textSize="@dimen/medium_text_size1"
            android:drawableLeft="@drawable/icon_collapse"
            android:layout_margin="8dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/bottom_margin_layout"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@android:color/transparent"/>

    <View
        android:id="@+id/bottom_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"/>

</LinearLayout>
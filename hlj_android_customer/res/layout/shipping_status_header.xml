<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff3de"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="物流信息还没更新，点击刷新按钮试试"
            android:textColor="#fd7e33"
            android:textSize="@dimen/medium_text_size2" />

        <LinearLayout
            android:id="@+id/layout_refresh"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:background="@drawable/sp_r3_stroke_fd7e33"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_refresh_fd7e33" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="刷新"
                android:textColor="#fd7e33"
                android:textSize="@dimen/medium_text_size2" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5e5cc"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/tv_shipping_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/medium_text_size2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_shipping_no2"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />

            <TextView
                android:id="@+id/tv_shipping_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_color_white_2_background2"
                android:clickable="true"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/medium_text_size3" />

            <TextView
                android:id="@+id/tv_copy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="复制单号"
                android:textColor="@color/colorLink"
                android:textSize="@dimen/medium_text_size2" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>
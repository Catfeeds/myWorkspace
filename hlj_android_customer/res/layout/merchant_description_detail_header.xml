<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/merchant_describe_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/hljColorSegmentBackground"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="16dp"
                android:text="@string/title_activity_merchant_description"
                android:textColor="?attr/hljColorSegmentTitle"
                android:textSize="@dimen/medium_text_size1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_merchant_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="?attr/hljColorContent2"
                android:textSize="@dimen/medium_text_size1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/merchant_achievement_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/hljColorSegmentBackground"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="16dp"
                android:text="@string/label_merchant_achievement"
                android:textColor="?attr/hljColorSegmentTitle"
                android:textStyle="bold" />

            <View
                style="@style/line_horizontal"
                android:background="?attr/hljColorLine" />

            <LinearLayout
                android:id="@+id/merchant_achievement_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!--店铺报道-->
        <LinearLayout
            android:id="@+id/sub_page_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/hljColorSegmentBackground"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/label_shop_report"
                android:textColor="?attr/hljColorSegmentTitle"
                android:textSize="@dimen/medium_text_size1"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_sub_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <!--特色服务-->
        <LinearLayout
            android:id="@+id/service_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/hljColorSegmentBackground"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="16dp"
                android:text="特色服务"
                android:textColor="?attr/hljColorSegmentTitle"
                android:textSize="@dimen/medium_text_size1"
                android:textStyle="bold" />

            <View
                style="@style/line_horizontal"
                android:background="?attr/hljColorLine" />

            <RelativeLayout
                android:id="@+id/service_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/img_service_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_arrow_right_dark_gray_14_26"
                    android:tint="?attr/hljColorContent2"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/server_merchant_promise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/img_service_arrow"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/refund_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_refund_hint"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="?attr/hljDrawableR2StrokeAccent"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="退"
                            android:textColor="?attr/hljColorAccent"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_refund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-1dp"
                            android:layout_toRightOf="@id/tv_refund_hint"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:textColor="?attr/hljColorContent2"
                            android:textSize="@dimen/medium_text_size1" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/refund_bottom_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <RelativeLayout
                        android:id="@+id/promise_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_promise_hint"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="?attr/hljDrawableR2StrokeAccent"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="诺"
                            android:textColor="?attr/hljColorAccent"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_promise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-1dp"
                            android:layout_toRightOf="@id/tv_promise_hint"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:textColor="?attr/hljColorContent2"
                            android:textSize="@dimen/medium_text_size1" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/promise_bottom_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <RelativeLayout
                        android:id="@+id/free_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_free_hint"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="?attr/hljDrawableR2StrokeAccent"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="免"
                            android:textColor="?attr/hljColorAccent"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-1dp"
                            android:layout_toRightOf="@id/tv_free_hint"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="@string/label_cost_free_online"
                            android:textColor="?attr/hljColorContent2"
                            android:textSize="@dimen/medium_text_size1" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hotel_merchant_promise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/img_service_arrow"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/hotel_free_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_hotel_free_hint"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="?attr/hljDrawableR2StrokeAccent"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="免"
                            android:textColor="?attr/hljColorAccent"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_hotel_free"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-1dp"
                            android:layout_toRightOf="@id/tv_hotel_free_hint"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="@string/label_cost_free_online"
                            android:textColor="?attr/hljColorContent2"
                            android:textSize="@dimen/medium_text_size1" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/hotel_free_bottom_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />
                    <RelativeLayout
                        android:id="@+id/hotel_platform_gift_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_hotel_platform_gift_hint"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="?attr/hljDrawableR2StrokeAccent"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="礼"
                            android:textColor="?attr/hljColorAccent"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_hotel_platform_gift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-1dp"
                            android:layout_toRightOf="@id/tv_hotel_platform_gift_hint"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:textColor="?attr/hljColorContent2"
                            android:textSize="@dimen/medium_text_size1" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <!--店铺环境-->
        <LinearLayout
            android:id="@+id/shop_images_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/hljColorSegmentBackground"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="店铺环境"
                android:textColor="?attr/hljColorSegmentTitle"
                android:textSize="@dimen/medium_text_size1"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

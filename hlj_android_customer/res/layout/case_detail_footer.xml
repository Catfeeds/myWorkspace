<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="60dp">

    <LinearLayout
        android:id="@+id/layout_related_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="102dp" />

        <com.slider.library.Indicators.CirclePageExIndicator
            android:id="@+id/flow_indicator"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            app:circleOffset="4dp"
            app:circleWidth="10dp"
            app:circleradius="1dp"
            app:fillColor="@color/colorGray"
            app:pageColor="@color/colorGray3"
            app:strokeWidth="0dp" />
    </LinearLayout>

    <View
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorWhite"/>

    <RelativeLayout
        android:id="@+id/recommend_cases_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/label_hot_case2"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />


        <LinearLayout
            android:id="@+id/recommend_case_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:orientation="vertical" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/sp_stroke_line_solid_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f5f0eb"
                android:contentDescription="@string/app_name"
                android:minHeight="80dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/paly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_play_trans_white_136_136"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:hint="@string/item_describe_hint"
            android:maxLines="3"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/colorBlack2"
            android:textColorHint="@color/colorGray3"
            android:textSize="@dimen/medium_text_size1" />
    </LinearLayout>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignRight="@+id/layout"
        android:layout_alignTop="@+id/layout"
        android:layout_margin="5dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/icon_delete_gray_24_29" />

    <View
        android:id="@+id/cancel_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/layout"
        android:layout_alignTop="@+id/layout" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/layout"
        android:layout_alignRight="@+id/layout"
        android:layout_margin="5dp"
        android:background="@drawable/sp_r10_primary"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_location_white"
        android:visibility="gone" />

</RelativeLayout>
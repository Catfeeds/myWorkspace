<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rich_thread_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <com.makeramen.rounded.RoundedImageView
            android:id="@+id/iv_rich_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:corner_radius="2dp" />

        <ImageView
            android:id="@+id/iv_rich_thread_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_r2_alpha_50_black"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rich_thread_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/ex_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rich_thread_count"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/sp_r2_white95"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/ex_small_text_size" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
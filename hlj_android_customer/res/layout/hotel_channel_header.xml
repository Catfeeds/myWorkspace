<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/hotel_channel_header_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/hotel_header_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@mipmap/image_hotel_top_bg"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hotel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="订婚宴"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ex_huge_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:text="档期闪电查 预订送万元大礼"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/medium_text_size2" />

    </LinearLayout>

    <View
        android:id="@+id/empty_header_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:visibility="gone"/>

    <com.hunliji.hljcommonlibrary.views.widgets.cardview.CardView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="130dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:cardShadowStartColor="@color/cardview_shadow_start_color"
        app:cardShadowEndColor="@color/cardview_shadow_end_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_adv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="163"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorLine" />

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="180"
                android:scaleType="centerCrop"
                android:visibility="visible" />
        </LinearLayout>
    </com.hunliji.hljcommonlibrary.views.widgets.cardview.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:lineSpacingMultiplier="1.3"
        android:paddingRight="16dp"
        android:textColor="@color/colorBlack2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/title_tags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:visibility="gone">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.rounded.RoundedImageView
                android:id="@+id/img_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:corner_radius="20dp" />

            <ImageView
                android:id="@+id/img_daren"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/img_avatar"
                android:layout_alignRight="@+id/img_avatar"
                android:src="@mipmap/icon_vip_yellow_28_28"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxWidth="150sp"
                    android:textColor="@color/colorBlack2"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text_size1" />

                <TextView
                    android:id="@+id/tv_owner_label"
                    android:layout_width="30dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/sp_r8_accent_sub"
                    android:gravity="center"
                    android:text="@string/label_owner"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/medium_text_size3" />

                <TextView
                    android:id="@+id/tv_wedding_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/web_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="vertical"
        android:visibility="visible">

        <com.example.suncloud.hljweblibrary.views.widgets.CustomWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:isScrollContainer="false"
            android:scrollbars="none"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/colorBlack2"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/four_images_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_4_1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <ImageView
                android:id="@+id/img_4_2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_4_3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <ImageView
                android:id="@+id/img_4_4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/nine_images_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_9_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <ImageView
                android:id="@+id/img_9_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <ImageView
                android:id="@+id/img_9_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_9_4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <ImageView
                android:id="@+id/img_9_5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <ImageView
                android:id="@+id/img_9_6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nine_images_line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_9_7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <ImageView
                android:id="@+id/img_9_8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImageBackground" />

            <RelativeLayout
                android:id="@+id/img_9_9_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_9_9"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="4dp"
                    android:scaleType="centerCrop"
                    android:background="@color/colorImageBackground"/>

                <LinearLayout
                    android:id="@+id/img_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_alignRight="@+id/img_9_9"
                    android:layout_alignBottom="@+id/img_9_9"
                    android:background="@color/transparent_black"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_img_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="2dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/small_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/icon_image_mark_white_24_20" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
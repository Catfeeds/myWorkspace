<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_r8_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingBottom="20dp"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/large_text_size2" />

        <TextView
            android:id="@+id/tv_alert_msg"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/sp_r3_half_stroke_line2_solid_trans"
            android:gravity="center"
            android:hint=""
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/medium_text_size1" />

    </LinearLayout>

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_r6_bl_white_2_background2"
            android:gravity="center"
            android:text="@string/label_reselect___cm"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/medium_text_size1" />

        <View style="@style/line_vertical" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_r6_br_white_2_background2"
            android:gravity="center"
            android:text="@string/label_confirm___cm"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:id="@+id/tv_hint_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_password_2"
        android:layout_marginTop="25dp"
        android:text="@string/label_input_password_again___pay"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/medium_text_size1" />


    <com.hunliji.hljcommonlibrary.views.widgets.SafePasswordEditText
        android:id="@+id/et_password_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hint_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/et_password_2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sl_r18_primary_2_dark"
        android:gravity="center"
        android:enabled="false"
        android:text="@string/btn_finished___pay"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ex_medium_text_size" />

</RelativeLayout>
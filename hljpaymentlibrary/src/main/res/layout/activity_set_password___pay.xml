<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.SetPasswordActivity">

    <com.hunliji.hljcommonlibrary.views.widgets.SafeKeyboardView
        android:id="@+id/safe_kb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/safe_kb">

        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/layout1"
                layout="@layout/set_psw_edit_text_layout1___pay" />

            <include
                android:id="@+id/layout2"
                layout="@layout/set_psw_edit_text_layout2___pay" />

        </ViewFlipper>

    </ScrollView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <View
        android:id="@+id/view_white"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorWhite"
        android:visibility="gone" />

    <View
        android:id="@+id/view_gray"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackground"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_template_header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorWhite"
        android:contentDescription="@string/app_name"
        android:paddingBottom="10dp"
        android:paddingTop="16dp"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_other_template___card"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_theme_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_feature_template___card" />

        <Button
            android:id="@+id/btn_share"
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/sp_r12_w2_stroke_primary"
            android:text="@string/label_share_solve_lock___card"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size3" />


    </LinearLayout>


</LinearLayout>
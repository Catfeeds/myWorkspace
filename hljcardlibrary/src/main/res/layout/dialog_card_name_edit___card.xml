<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_r6_white"
    android:paddingTop="40dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="实名确认"
        android:textColor="@color/colorBlack2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_alert_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="请确新郎新娘姓名是否为真实姓名，为防止他人冒用您的信息，请帖发送后将不可修改。"
        android:textColor="@color/colorBlack3"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/sp_r4_background"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:text="新郎"
                android:includeFontPadding="false"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size2" />

            <TextView
                android:id="@+id/tv_groom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:lines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:textColor="@color/colorBlack2"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/sp_r4_background"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:text="新娘"
                android:includeFontPadding="false"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/medium_text_size2" />

            <TextView
                android:id="@+id/tv_bride_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/colorBlack2"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sl_r6_bl_white_2_background2"
            android:gravity="center"
            android:padding="12dp"
            android:text="修改"
            android:textColor="@color/colorBlack3"
            android:textSize="@dimen/medium_text_size1" />

        <View
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorLine" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sl_r6_br_white_2_background2"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/label_confirm___cm"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1" />

    </LinearLayout>

</LinearLayout>

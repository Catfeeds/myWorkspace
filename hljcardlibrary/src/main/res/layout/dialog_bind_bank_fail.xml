<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_r6_white"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="绑定失败"
        android:textColor="@color/colorBlack2"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="新郎新娘名与持卡人姓名不匹配，您是否使用了小名或昵称？"
        android:textColor="@color/colorBlack3"
        android:textSize="16sp" />

    <View
        style="@style/line_horizontal"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="若是，请修改请帖姓名"
        android:textColor="@color/colorBlack3"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_modify_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sl_r4_primary_2_dark"
        android:text="修改姓名"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="若不是，请填写与请帖姓名相同的银行卡"
        android:textColor="@color/colorBlack3"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sl_r4_stroke_primary_2_stroke_gray2"
        android:text="重新填写持卡人姓名"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_notify___push" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorBlack2"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="注意西装细节, 拥有100分新郎！" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/medium_text_size3"
                tools:text="12345人正在参与砍价会" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/sp_r15_stroke_primary"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/icon_arrow_right_primary_14_24"
            android:gravity="center_vertical"
            android:minWidth="0dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/btn_goto___push"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size1" />

    </LinearLayout>

    <View
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/content_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/content_layout"
        android:background="@drawable/sp_gradient_notify_layout" />
</RelativeLayout>
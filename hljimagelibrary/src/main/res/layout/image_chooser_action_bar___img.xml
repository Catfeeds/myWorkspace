<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/colorWhite">

    <ImageButton
        android:id="@+id/btn_back"
        style="@style/ActionImageItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_back_primary" />

    <com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearLayout
        android:id="@+id/cl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/label_all_photos___img"
            android:textColor="@color/colorBarTitle"
            android:textSize="@dimen/bar_title_size" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:duplicateParentState="true"
            android:src="@drawable/sl_ic_dropdown_2_dropdown_up"
            android:tint="@color/colorBarTitle" />

    </com.hunliji.hljcommonlibrary.views.widgets.CheckableLinearLayout>


    <TextView
        android:id="@+id/item"
        style="@style/ActionButtonItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLine" />
</RelativeLayout>